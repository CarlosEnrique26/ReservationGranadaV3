<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de reservas</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <label class="navbar-brand">Sistema de Reservas</label>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center">
                <ul class="navbar-nav" style="margin-left: auto; display: flex; justify-content: flex-end;">
                    <li class="nav-item" style="margin-left: 5px; margin-right: 5px;" id="mesasLink">@Html.ActionLink("Mesas", "Table", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item" style="margin-left: 5px; margin-right: 5px;" id="usuariosLink">@Html.ActionLink("Usuarios", "Users", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item" style="margin-left: 5px; margin-right: 5px;" id="reservasLink">@Html.ActionLink("Gestión de reservas", "Reservation", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>
    <style>
        /* Estilos básicos para el navbar */
        .navbar {
            padding: 10px 0;
        }

        /* Estilos para los enlaces */
        .nav-link {
            
            color: #ffffff !important;
           
            border-radius: 5px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            /* Efecto hover sobre los enlaces */
            .nav-link:hover {
                background-color: #5a6268;
                color: #ffffff !important;
                border: 1px solid #ffffff;
            }

            /* Estilo para el enlace activo */
            .nav-link.active {
                background-color: #17a2b8;
                border: 1px solid #ffffff;
                color: #ffffff !important;
            }
    </style>
</body>

</html>


<script>
    
    $(document).ready(function () {
        var currentUrl = window.location.href;

        // Quitar la clase 'active' de todos los enlaces al inicio
        $('.nav-link').removeClass('active');

        // Agregar la clase 'active' al enlace correspondiente según la URL actual
        if (currentUrl.includes("/Home/Table")) {
            $('#mesasLink .nav-link').addClass('active');
        } else if (currentUrl.includes("/Home/Users")) {
            $('#usuariosLink .nav-link').addClass('active');
        } else if (currentUrl.includes("/Home/Reservation")) {
            $('#reservasLink .nav-link').addClass('active');
        }
    });
   

   

   

</script>