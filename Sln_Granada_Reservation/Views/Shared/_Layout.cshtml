                color: #ffffff !important;
                border: 1px solid #ffffff;
            }

            /* Estilo para el enlace activo */
            .nav-link.active {
                background-color: #17a2b8;
                border: 1px solid #ffffff;
                color: #ffffff !important;
            }
            .nav-link .fas {
                margin-right: 8px; /* Espacio entre el ícono y el texto */
                color: #b0b0b0; /* Color gris claro para los íconos */
                font-size: 1.2em; /* Aumenta el tamaño de los íconos */
                transition: color 0.3s ease; /* Suaviza el cambio de color al hacer hover */
            }

            /* Cambia el color al hacer hover sobre el enlace */
            .nav-link:hover .fas {
                color: #ffffff; /* Cambia a blanco cuando el enlace está en hover */
            }

        .dropdown-item .fas {
            margin-right: 10px; /* Espacio entre el ícono y el texto */

            font-size: 1.2em; /* Tamaño del ícono */
            transition: color 0.3s ease;
        }

        /* Cambia el color de los íconos al hacer hover en el menú desplegable */
        .dropdown-item:hover .fas {
            color: #000000; /* Cambia a negro al hacer hover */
        }

        /* Clase para resaltar la opción activa en el menú */
        .nav-link.active {
            background-color: #007bff; /* Color de fondo para resaltar */
            color: #ffffff !important; /* Color de texto blanco */
